{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "checkbox",
      "id": "sticky_header",
      "label": "Sticky Header",
      "default": false
    },
    {
      "type": "select",
      "id": "menu_position",
      "label": "Menu Position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 1200,
      "max": 1600,
      "step": 5,
      "label": "Header Max Width",
      "default": 1300
    },
    {
      "type": "range",
      "id": "height",
      "min": 60,
      "max": 160,
      "step": 1,
      "label": "Header Height",
      "default": 80
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu"
    },
    {
      "type": "color",
      "id": "menu_color",
      "label": "Menu Color",
      "default": "#000"
    },
    {
      "type": "color",
      "id": "active_color",
      "label": "Active Menu Color",
      "default": "#676767"
    }
  ]
}
{% endschema %}
