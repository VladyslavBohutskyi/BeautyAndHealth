{% schema %}
{
  "name": "Text",
  "settings": [
    {
      "type": "text",
      "id": "title_id",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "richtext_id",
      "label": "Subtitle"
    },
    {
      "type": "image_picker",
      "id": "bg_id",
      "label": "Background"
    },
    {
      "type": "range",
      "id": "pt_id",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Padding Top",
      "default": 5
    },
    {
      "type": "range",
      "id": "pb_id",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Padding Bottom",
      "default": 5
    },
    {
      "type": "range",
      "id": "mt_id",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "mb_id",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Margin Bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "min-height_id",
      "min": 0,
      "max": 900,
      "step": 10,
      "label": "Height",
      "default": 0
    },
    {
      "type": "color",
      "id": "color_id",
      "label": "Color",
      "default": "#000",
      "info": "Color For Your Text"
    },
    {
      "type": "text",
      "id": "button_title",
      "label": "Button",
      "default": "Button",
      "info": "Title of button"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "URL for Button",
      "info": "Insert link"
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Text align",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    }
  ],
  "presets": [
    {
      "name": "Text"
    }
  ]
}
{% endschema %}
