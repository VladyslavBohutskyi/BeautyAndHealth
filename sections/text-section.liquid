{{ 'text-section.css' | asset_url | stylesheet_tag }}

<style>
  #shopify-section-{{ section.id }} .text-section{
    margin-top: {{ section.settings.mt_id }}px;
    margin-bottom: {{ section.settings.mb_id }}px;
    padding-top: {{ section.settings.pt_id }}px ;
    padding-bottom: {{ section.settings.pb_id }}px ;
    color: {{ section.settings.color_id }};
    min-height: {{ section.settings.min-height_id }}px;
    text-align: {{ section.settings.text_align }};
  }
</style>

<div class="text-section">
  {% if section.settings.bg_id %}
    <img src="{{ section.settings.bg_id | img_url: 'master' }}" alt="#" class="text-section__bg">
  {% endif %}

  <h2 class="text-section__title">
    {{ section.settings.title_id }}
  </h2>
  <div class="text-section__subtitle">
    {{ section.settings.richtext_id }}
  </div>
  <div class="text-section__btn">
    <a href="{{ section.settings.button_url }}">{{ section.settings.button_title }}</a>
  </div>
</div>

